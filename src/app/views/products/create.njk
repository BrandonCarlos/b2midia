{% extends "layout.njk" %}

{% import 'parts/card.njk' as card %}

{% block content %}

    {% call card.render('Cadastrar Produto', 'product-create container') %}

    <form method="POST" action="/products" enctype="multipart/form-data">
        <!-- enctype="multipart/form-data" = significa que podemos enviar arquivos neste formulário -->
        <!-- ou seja vai servir para enviarmos os arquivos(imagens) no formulário -->

        <div class="fields">
            {% include 'products/fields.njk' %}
        </div>

        <button class="button" type="submit" onclick="Validate.allFields(event)">Salvar</button>
    </form>
    {% endcall %}

{% endblock %}